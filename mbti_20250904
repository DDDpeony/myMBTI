        <div class="navigation">
            <button id="prevBtn" onclick="goToPreviousQuestion()" disabled>上一题</button>
            <button id="nextBtn" onclick="goToNextQuestion()" disabled>下一题</button>
            <button id="startBtn" onclick="startTest()">开始测试</button>
            <button id="restartBtn" onclick="restartTest()" style="display: none;">重新测试</button>
        </div>
    </div>

    <script>
        // 问题数据
        const questions = [
