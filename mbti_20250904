        // 性格类型描述
        const descriptions = {
            "ISTJ": "ISTJ - 务实主义者：您注重实际，有责任感，喜欢有条理的生活。",
            "ISFJ": "ISFJ - 守护者：您温暖、体贴，重视和谐，乐于助人。",
            "INFJ": "INFJ - 提倡者：您富有洞察力，理想主义，关心他人。",
            "INTJ": "INTJ - 战略家：您有远见，独立思考，追求完美。",
            "ISTP": "ISTP - 鉴赏家：您冷静、实际，善于解决问题，喜欢自由。",
            "ISFP": "ISFP - 探险家：您敏感、随和，富有创造力，珍视当下。",
            "INFP": "INFP - 调停者：您理想主义，富有同情心，追求真实。",
            "INTP": "INTP - 思想家：您理性、好奇，喜欢分析和理论。",
            "ESTP": "ESTP - 企业家：您活泼、实际，善于适应，喜欢冒险。",
            "ESFP": "ESFP - 娱乐家：您热情、友善，活在当下，享受生活。",
            "ENFP": "ENFP - 竞选者：您热情、富有想象力，充满可能性。",
            "ENTP": "ENTP - 辩论家：您聪明、好奇，喜欢辩论和创新。",
            "ESTJ": "ESTJ - 总经理：您果断、组织能力强，喜欢领导。",
            "ESFJ": "ESFJ - 执政官：您热情、有同理心，喜欢合作。",
            "ENFJ": "ENFJ - 主人公：您热情、有洞察力，善于激励他人。",
            "ENTJ": "ENTJ - 指挥官：您自信、果断，有领导力，追求成就。"
        };

        // 初始化变量
        let currentQuestion = 0;
        let answers = {};

        // 开始测试
        function startTest() {
            document.getElementById("intro").style.display = "none";
            document.getElementById("startBtn").style.display = "none";
            document.getElementById("question1").classList.add("active");
            updateProgress();
        }

        // 更新进度条
        function updateProgress() {
            const progress = (currentQuestion / questions.length) * 100;
            document.getElementById("progress").style.width = progress + "%";
        }

        // 选择选项
        document.querySelectorAll(".option").forEach(option => {
            option.addEventListener("click", function() {
                // 移除同一问题中其他选项的选中状态
                const questionContainer = this.closest(".question-container");
                questionContainer.querySelectorAll(".option").forEach(opt => {
                    opt.classList.remove("selected");
                });

                // 添加当前选项的选中状态
                this.classList.add("selected");

                // 保存答案
                const questionId = questionContainer.id;
                const value = this.getAttribute("data-value");
                answers[questionId] = value;

                // 启用下一题按钮
                document.getElementById("nextBtn").disabled = false;
            });
        });

        // 下一题
        function goToNextQuestion() {
            // 隐藏当前问题
            document.getElementById(`question${currentQuestion + 1}`).classList.remove("active");

            // 增加当前问题索引
            currentQuestion++;

            // 检查是否完成所有问题
            if (currentQuestion >= questions.length) {
                showResult();
                return;
            }

            // 显示下一题
            document.getElementById(`question${currentQuestion + 1}`).classList.add("active");

            // 更新进度条
            updateProgress();

            // 更新按钮状态
            document.getElementById("prevBtn").disabled = false;
            if (currentQuestion === questions.length - 1) {
                document.getElementById("nextBtn").textContent = "查看结果";
            }
        }

        // 上一题
        function goToPreviousQuestion() {
            // 隐藏当前问题
            document.getElementById(`question${currentQuestion + 1}`).classList.remove("active");

            // 减少当前问题索引
            currentQuestion--;

            // 显示上一题
            document.getElementById(`question${currentQuestion + 1}`).classList.add("active");

            // 更新进度条
            updateProgress();

            // 更新按钮状态
            document.getElementById("nextBtn").textContent = "下一题";
            if (currentQuestion === 0) {
                document.getElementById("prevBtn").disabled = true;
            }
        }

        // 显示结果
        function showResult() {
            // 计算MBTI类型
            let result = {
                E: 0, I: 0,
                S: 0, N: 0,
                T: 0, F: 0,
                J: 0, P: 0
            };

            // 统计答案
            for (let questionId in answers) {
                const question = questions.find(q => q.id === questionId);
                const trait = question.trait;
                const answer = answers[questionId];

                result[answer]++;
            }

            // 确定MBTI类型
            let mbtiType = "";
            mbtiType += result.E > result.I ? "E" : "I";
            mbtiType += result.S > result.N ? "S" : "N";
            mbtiType += result.T > result.F ? "T" : "F";
            mbtiType += result.J > result.P ? "J" : "P";

            // 显示结果
            document.getElementById("mbtiType").textContent = mbtiType;
            document.getElementById("description").textContent = descriptions[mbtiType];

            // 生成建议
            let suggestions = [];
            if (mbtiType[1] === "S") {
                suggestions.push("尝试关注更多可能性和未来，有时跳出当前框架会有新发现。");
            } else {
                suggestions.push("尝试关注更多实际细节，将想法付诸实践会让您更有成就感。");
            }

            if (mbtiType[2] === "T") {
                suggestions.push("在决策时适当考虑情感因素，这有助于改善人际关系。");
            } else {
                suggestions.push("在决策时适当加入逻辑分析，这有助于提高决策效率。");
            }

            // 显示建议
            const suggestionsList = document.getElementById("suggestions");
            suggestionsList.innerHTML = "";
            suggestions.forEach(suggestion => {
                const li = document.createElement("li");
                li.textContent = suggestion;
                suggestionsList.appendChild(li);
            });

            // 隐藏问题，显示结果
            document.querySelectorAll(".question-container").forEach(q => {
                q.style.display = "none";
            });
            document.getElementById("result").classList.add("active");

            // 更新按钮
            document.getElementById("nextBtn").style.display = "none";
            document.getElementById("prevBtn").style.display = "none";
            document.getElementById("restartBtn").style.display = "block";
        }

        // 重新测试
        function restartTest() {
            // 重置变量
            currentQuestion = 0;
            answers = {};

            // 重置UI
            document.querySelectorAll(".question-container").forEach(q => {
                q.classList.remove("active");
            });
            document.querySelectorAll(".option").forEach(opt => {
                opt.classList.remove("selected");
            });

            document.getElementById("intro").style.display = "block";
            document.getElementById("result").classList.remove("active");
            document.getElementById("startBtn").style.display = "inline-block";
            document.getElementById("restartBtn").style.display = "none";
            document.getElementById("nextBtn").style.display = "inline-block";
            document.getElementById("nextBtn").textContent = "下一题";
            document.getElementById("prevBtn").style.display = "inline-block";
            document.getElementById("prevBtn").disabled = true;
            document.getElementById("nextBtn").disabled = true;

            // 更新进度条
            updateProgress();
        }
    </script>
</body>
</html>
